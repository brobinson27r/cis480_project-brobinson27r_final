@model IEnumerable<cis480_project.Models.EnablingObjective>

@{
    ViewBag.Title = "Index";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Courses", "Index", "Course")</li>
    <li>@Html.ActionLink((string) ViewBag.Course.Name, "Details", "Course", new { id = ViewBag.Course.Id}, null)</li>
    <li>@Html.ActionLink("Objectives", "Index", "Objective", new {courseId = ViewBag.Course.Id}, null)</li>
    <li>@Html.ActionLink("Objective - " + (string)ViewBag.Objective.Id.ToString(), "Details", "Objective", new { courseId = ViewBag.Course.Id, objectiveId = ViewBag.Objective.Id }, null)</li>
    <li>Enabling Objectives</li>
</ol>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { courseId = ViewBag.Course.Id, objectiveId = ViewBag.Objective.Id})
</p>
<table class="table">
    <tr>
        <th>
            Objective
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Objective.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { courseId = item.Objective.CourseId, objectiveId = item.ObjectiveId, enablingObjectiveId = item.Id }) |
            @Html.ActionLink("Details", "Details", new { courseId = item.Objective.CourseId, objectiveId = item.ObjectiveId, enablingObjectiveId = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { courseId = item.Objective.CourseId, objectiveId = item.ObjectiveId, enablingObjectiveId = item.Id })
        </td>
    </tr>
}

</table>
