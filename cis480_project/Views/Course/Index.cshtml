@using NET_MVC5_Bootstrap3_3_1_LESS.Controllers
@model IEnumerable<cis480_project.Models.Course>

@{
    ViewBag.Title = "Index";
}

<ol class="breadcrumb">
    <li>Courses</li>
</ol>

<h2>Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designator)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designator)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Objectives", "Index", "Objective", new {courseId = item.Id}, null) |
            @Html.ActionLink("Assignments", "Index", "Assignment", new { courseId = item.Id }, null) |
			@Html.ActionLink("Units", "Index", "Unit", new { courseId = item.Id }, null)
        </td>
    </tr>
}

</table>